{
  "name": "freeso-go",
  "version": "0.1.0",
  "description": "Cross-platform FreeSO launcher made with Electron",
  "private": true,
  "author": "dotequals <strdotequals@gmail.com>",
  "license": "MPL-2.0",
  "homepage": "./",
  "main": "public/electron.js",
  "scripts": {
    "build": "react-scripts build",
    "dev": "react-scripts start",
    "start": "concurrently \"cross-env BROWSER=none react-scripts start\" \"wait-on http://localhost:3000 && electron .\"",
    "pack": "electron-builder --dir",
    "dist": "npx build --ia32 --x64 --win --c.extraMetadata.main=build/electron.js",
    "dist-mac": "npx build --x64 --mac --c.extraMetadata.main=build/electron.js",
    "dist-linux": "npx build --x64 --linux --c.extraMetadata.main=build/electron.js"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "dependencies": {
    "bluebird": "^3.5.3",
    "clipboardy": "^1.2.3",
    "electron-is-dev": "^1.0.1",
    "fix-path": "^2.1.0",
    "fs-extra": "^7.0.1",
    "mousetrap": "^1.6.3",
    "node-7z": "^1.1.0",
    "request": "^2.88.0",
    "request-progress": "^3.0.0",
    "systeminformation": "^4.1.4",
    "winreg": "^1.2.4"
  },
  "devDependencies": {
    "concurrently": "^4.1.0",
    "cross-env": "^5.2.0",
    "electron": "^4.1.3",
    "electron-builder": "^20.39.0",
    "electron-devtools-installer": "^2.2.4",
    "enzyme": "^3.9.0",
    "normalize.css": "^8.0.1",
    "react": "^16.8.6",
    "react-color": "^2.17.0",
    "react-dom": "^16.8.6",
    "react-dropdown": "^1.6.4",
    "react-redux": "^6.0.1",
    "react-router-dom": "^5.0.0",
    "react-scripts": "^2.1.8",
    "react-toggle": "^4.0.2",
    "react-twitter-embed": "^2.0.7",
    "redux": "^4.0.1",
    "redux-devtools-extension": "^2.13.8",
    "redux-saga": "^1.0.2",
    "typescript": "^3.4.1",
    "wait-on": "^3.2.0"
  },
  "build": {
    "appId": "org.freeso.go",
    "appImage": {
      "systemIntegration": "doNotAsk"
    },
    "asar": true,
    "compression": "normal",
    "productName": "FreeSO Go",
    "directories": {
      "buildResources": "build",
      "output": "dist"
    },
    "linux": {
      "category": "Game",
      "icon": "public/icon.png",
      "synopsis": "Cross-platform FreeSO launcher made with Electron",
      "target": "AppImage"
    },
    "mac": {
      "category": "public.app-category.games",
      "darkModeSupport": true,
      "target": "zip",
      "icon": "public/icon.png"
    },
    "win": {
      "artifactName": "${productName}-${arch}-v${version}.exe",
      "icon": "public/icon.png",
      "target": "portable"
    }
  }
}
