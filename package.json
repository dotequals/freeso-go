{
  "name": "freeso-go",
  "version": "0.1.0",
  "description": "Cross-platform FreeSO launcher made with Electron",
  "private": true,
  "author": "dotequals <strdotequals@gmail.com>",
  "license": "MPL-2.0",
  "homepage": "./",
  "main": "public/electron.js",
  "scripts": {
    "build": "react-scripts build",
    "dev": "react-scripts start",
    "start": "concurrently \"cross-env BROWSER=none react-scripts start\" \"wait-on http://localhost:3000 && electron .\"",
    "unpack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": [
    "Chrome >= 78"
  ],
  "dependencies": {
    "bluebird": "^3.7.1",
    "electron-is-dev": "^1.1.0",
    "fix-path": "^2.1.0",
    "fs-extra": "^8.1.0",
    "mousetrap": "^1.6.3",
    "node-7z": "^2.0.4",
    "normalize.css": "^8.0.1",
    "react": "^16.12.0",
    "react-color": "^2.17.3",
    "react-dom": "^16.12.0",
    "react-dropdown": "^1.6.4",
    "react-redux": "^7.1.3",
    "react-router-dom": "^5.1.2",
    "react-scripts": "3.2.0",
    "react-toggle": "^4.1.1",
    "react-twitter-embed": "^3.0.3",
    "redux": "^4.0.4",
    "redux-devtools-extension": "^2.13.8",
    "redux-saga": "^1.1.3",
    "request": "^2.88.0",
    "request-progress": "^3.0.0",
    "systeminformation": "^4.16.0",
    "winreg": "^1.2.4"
  },
  "devDependencies": {
    "concurrently": "^5.0.0",
    "cross-env": "^6.0.3",
    "electron": "^7.1.2",
    "electron-builder": "^21.2.0",
    "electron-devtools-installer": "^2.2.4",
    "version-bump-prompt": "^5.0.6",
    "wait-on": "^3.3.0"
  },
  "build": {
    "appId": "org.freeso.go",
    "asar": true,
    "compression": "normal",
    "productName": "FreeSO Go",
    "directories": {
      "buildResources": "build",
      "output": "dist"
    },
    "linux": {
      "category": "Game",
      "icon": "public/icon.png",
      "synopsis": "Cross-platform FreeSO launcher made with Electron",
      "target": "AppImage"
    },
    "mac": {
      "category": "public.app-category.games",
      "darkModeSupport": true,
      "target": "zip",
      "icon": "public/icon.png"
    },
    "win": {
      "artifactName": "${productName}-${arch}-v${version}.exe",
      "icon": "public/icon.png",
      "target": "portable"
    }
  }
}
